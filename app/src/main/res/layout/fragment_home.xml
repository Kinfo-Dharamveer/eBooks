<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/homeFragContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="60dp"
                android:orientation="vertical">


            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:src="@drawable/banner"
                    android:layout_margin="11.7dp"
                    android:scaleType="centerCrop"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginTop="11.6dp"
                    android:orientation="horizontal">

                <com.kinfoitsolutions.ebooks.ui.customviews.BoldTextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16.7sp"
                        android:text="Recommend"/>


                <com.drivingschool.android.customviews.CustomTextView
                        android:id="@+id/viewAllRecommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all"
                        android:textSize="13.3sp"
                        android:textColor="@color/blue"/>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingTop="13.3dp"
                    android:paddingLeft="16.7dp"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/recommanded_recyclerview"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginTop="23.3dp"
                    android:orientation="horizontal">

                <com.kinfoitsolutions.ebooks.ui.customviews.BoldTextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16.7sp"
                        android:text="Todayâ€™s Top 50 Books"/>


                <com.drivingschool.android.customviews.CustomTextView
                        android:id="@+id/viewAllToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all"
                        android:textSize="13.3sp"
                        android:textColor="@color/blue"/>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingTop="13.3dp"
                    android:paddingLeft="16.7dp"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/top50_books_recyclerview"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>





</RelativeLayout>